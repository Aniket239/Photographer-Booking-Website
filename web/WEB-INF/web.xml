<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>photography.Registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>photography.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImgTestServlet</servlet-name>
        <servlet-class>photography.ImgTestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>portfolio</servlet-name>
        <servlet-class>photography.portfolio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendMail</servlet-name>
        <servlet-class>photography.SendMail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>contact</servlet-name>
        <servlet-class>photography.contact</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sendotp</servlet-name>
        <servlet-class>photography.sendotp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verifyotp</servlet-name>
        <servlet-class>photography.verifyotp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImgTestServlet</servlet-name>
        <url-pattern>/ImgTestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>portfolio</servlet-name>
        <url-pattern>/portfolio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendMail</servlet-name>
        <url-pattern>/SendMail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contact</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sendotp</servlet-name>
        <url-pattern>/sendotp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verifyotp</servlet-name>
        <url-pattern>/verifyotp</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
